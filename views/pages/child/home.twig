{% extends "pages/base/home_base.twig" %}

{% block header %}
    {% include 'partials/header-home.twig' %}
{% endblock header %}

{% block title %}
    <div class="row  fullscreen d-flex ">
        <div class="banner-content align-items-center col-lg-12  justify-content-center">
            <h1>Florian <strong>Brunet</strong></h1>
            <h3>Portfolio</h3>
        </div>
    </div>
</section>
{% endblock title %}
    {# rajouter ici l'affichage des donn√©es projets avec liens pour les pages#}

{% block content %}
    {% for _data_project in data_projects %}
        <div class="container-fluid d-flex flex-row">
            <div class="p-2 left">
                <h2>{{_data_project.title}}</h2>
                <p>{{_data_project.introduction}}</p>
                <div class="pj-open">
                    <a href="{{ path_for('project', { cate:  _data_project.category , proj:  _data_project.name1  }) }}">
                        <p>
                            Ouvrir
                        </p>
                        <div class="pj-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 36.22 36.22"><defs><style>.cls-1{fill:none;stroke:#FF502F;stroke-linecap:round;stroke-linejoin:round;}</style></defs><title>Asset 2</title><g id="Layer_2" data-name="Layer 2"><g id="Layer_1-2" data-name="Layer 1"><line class="cls-1" x1="13.11" y1="23.11" x2="23.11" y2="13.11"/><polyline class="cls-1" points="13.11 13.11 23.11 13.11 23.11 23.11"/><circle class="cls-1" cx="18.11" cy="18.11" r="17.61"/></g></g></svg>
                        </div>
                    </a>
                </div>
            </div>    
            <div class="p-2 img">
                <img src ="../assets/img/{{_data_project.category}}/{{_data_project.name1}}_vig.png">
            </div>
        </div>
    {% endfor %}
{% endblock content %}

